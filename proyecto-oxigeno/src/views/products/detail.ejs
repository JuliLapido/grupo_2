<%- include('../partials/head.ejs')  %>
<link rel="stylesheet" href="/css/detail.css">

<body>
    <header id="header">
        <%- include("../partials/header.ejs")  %> 
    </header>

    <main id="main-detail-ejs">
        <% if (product) { %>
        <picture id="imagen-producto">
            <img src="/images/Uploads/products/<%= product.image %> " alt="imagen del producto">
        </picture>
        
        <section class="section-detalles-botones">
        
        <article id="detalles-producto">
        <h2 class="detalle-nombre"><%= product.name%> </h2>
        <p class="detalle-precio">$<%= product.price%> </p>
        <p class="detalle-descripcion"><%= product.description%> </p>
        </article>

        <div class="btn-agregar">

            <div class="buy-btn">
                <button class="btn-add add-cart" data-id="<%= product.id %>"  type="submit">
                    Agregar
                </button>
            </div>
            <% } else { %>
                <h2>
                    No se encontro un producto <a href="/products">Volver</a>
                </h2>
            </section>
            <% } %>
        </div>
        

        <% if (user) { %>
            <% if (user.roleId != 3) { %>
                <article id="botones">
        
                    <button class="boton-editar">
                        <a href="/products/editar/<%= product.id %> ">Editar</a>
                    </button>
        
                    <form onsubmit="return confirm('Desea eliminar este producto?')" action="/products/borrar/<%= product.id  %>?m=DELETE" method="post">
                        <input type="hidden" name="image" value="<%= product.image %>">         
                        <button type="submit" class="boton-eliminar">Borrar</button>
                    </form>
                    
                </article>
        <% } %>
        <% } %>
    </main>

<script src="/js/cartAdd.js"></script>
</body>
<footer id="footer">
    <%- include("../partials/footer.ejs") %> 
</footer>
</html>